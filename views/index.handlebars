<form method="post">
  <div class="form-group">
    <label for="GoodOrBad">Good or Bad</label>

    <input type="radio" class="form-control" id="GoodOrBad" name="goodbad" {{#if status.good}} checked {{/if}}value="1">

    <input type="radio" class="form-control" id="GoodOrBad" name="goodbad" {{#unless status.good}} checked {{/unless}} value="0">
  </div>
  <div class="form-group">
    <label for="GoodOrBad">Favorite Food</label>
    <input type="input" class="form-control" id="favFood" name="food" value="{{status.food}}">
  </div>
  <div class="form-group">
    <label for="GoodOrBad">Favorite Color</label>
    <select name="color" id="favColor" class="form-control">
      <option value="red">Red</option>
      <option value="orange">Orange</option>
      <option value="green">Green</option>
      <option value="blue">Blue</option>
      <option value="indigo">Indigo</option>
      <option value="violet">Violet</option>
    </select>
  </div>
  <div class="form-group">
    <label for="insanity">Insanity Level</label>
    <input name="insanity" type="range" min="0" max="11" class="form-control">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
